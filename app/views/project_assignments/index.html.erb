<h1>Listing Project Assignments</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project_assignments.each do |project_assignment| %>
      <tr>
        <td><%= project_assignment.project %></td>
        <td><%= project_assignment.user %></td>
        <td><%= link_to 'Show', project_assignment %></td>
        <td><%= link_to 'Edit', edit_project_assignment_path(project_assignment) %></td>
        <td><%= link_to 'Destroy', project_assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

