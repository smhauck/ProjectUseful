<%= form_for(@wiki_page) do |f| %>
  <% if @wiki_page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@wiki_page.errors.count, "error") %> prohibited this wiki_page from being saved:</h2>

      <ul>
      <% @wiki_page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, { size: 60 } %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body, { cols: 60, rows: 10 } %>
  </div>
  <div class="field">
    <%= f.label :wiki_id %></br >
    <%= collection_select(:wiki_page, :wiki_id, Wiki.all, :id, :title) %>
  </div>
  <div class="field">
    <%= f.label :product_id %></br >
    <%= collection_select(:wiki_page, :product_id, Product.all, :id, :title, include_blank: true) %>
  </div>
  <div class="field">
    <%= f.label :story_id %></br >
    <%= collection_select(:wiki_page, :story_id, Story.all, :id, :title, include_blank: true) %>
  </div>
  <div class="field">
    <%= f.label :task_id %></br >
    <%= collection_select(:wiki_page, :task_id, Task.all, :id, :title, include_blank: true) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
