<h1>Listing wiki_pages</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Version</th>
      <th>Product</th>
      <th>Project</th>
      <th>Story</th>
      <th>Task</th>
      <th>User</th>
    </tr>
  </thead>

  <tbody>
    <% @wiki_pages.each do |wiki_page| %>
      <tr>
        <td><%= link_to wiki_page.title, wiki_page %></td>
        <td><%= wiki_page.body %></td>
        <td><%= wiki_page.version %></td>
        <% if wiki_page.product_id %><td><%= wiki_page.product.title %></td><% end %>
        <% if wiki_page.project_id %><td><%= wiki_page.project.title %></td><% end %>
        <% if wiki_page.story_id %><td><%= wiki_page.story.title %></td><% end %>
        <% if wiki_page.task_id %><td><%= wiki_page.task.title %></td><% end %>
        <% if wiki_page.user_id %><td><%= wiki_page.user.username %></td><% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Wiki page', new_wiki_page_path %>
