<p id="notice"><%= notice %></p>

<h1>Listing Project Comments</h1>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Project</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project_comments.each do |project_comment| %>
      <tr>
        <td><%= project_comment.user.username %></td>
        <td><%= project_comment.project.title %></td>
        <td><%= project_comment.comment %></td>
        <td><%= link_to 'Show', project_comment %></td>
        <td><%= link_to 'Edit', edit_project_comment_path(project_comment) %></td>
        <td><%= link_to 'Destroy', project_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

