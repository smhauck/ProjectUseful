<h1>Products</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Alive</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.title, product %></td>
        <td>(DEVEL) <%= product.alive %></td>
        <td><%= product.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
