<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>: <%= f.text_field :title, size: 60, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :public %>: <%= f.check_box :public %>
  </div>
  <div class="field">
	  <%= f.label :owner_id %>: <%= collection_select(:product, :owner_id, User.all.order(:username), :id, :username) %>
  </div>
  <div class="field">
	  <%= f.label :product_status_type_id %>: <%= collection_select(:product, :product_status_type_id, ProductStatusType.all, :id, :title) %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
