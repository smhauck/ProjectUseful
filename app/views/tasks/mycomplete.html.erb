<% if @tasks.count > 0 %>
  <h2>My Complete Tasks</h2>
  <table class="table tablesorter">
    <thead>
	    <tr><th>Title</th><th>Status</th><th><th>Sched Start</th><th>Actual Start</th><th>Sched Compl</th><th>Actual Compl</th><th>Project</th><th>Product</th></tr>
    </thead>
    <tbody>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= link_to task.title, task %></td>
      <td class="<%= task.status.code %>"><%= task.status.title %></td>
      <td><% if task.story_id %><%= link_to task.story.title, task.story %><% end %></td>
      <td><%= task.sched_start_date %></td>
      <td><%= task.actual_start_date %></td>
      <td><%= task.sched_completion_date %></td>
      <td><%= task.actual_completion_date %></td>
      <td><% if task.project_id %><%= link_to task.project.title, task.project %><% end %></td>
      <td><% if task.product_id %><%= link_to task.product.title, task.product %><% end %></td>
    </tr>
  <% end %>
</tbody>
</table>
<% else %>
  <h2>No Complete Assigned Tasks</h2>
<% end %>
<br>

<%= link_to 'New Task', new_task_path %>
