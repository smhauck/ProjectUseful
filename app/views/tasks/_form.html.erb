<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, size: 60, autofocus: :true %>
  </div>
  <div class="field">
    <%= f.label :task_status_type_id %></br >
    <%= collection_select(:task, :task_status_type_id, TaskStatusType.all, :id, :title) %>
  </div>
  <div class="field">
    <%= f.label :product_id %></br >
    <%= collection_select(:task, :product_id, Product.all.order(:title), :id, :title, include_blank: '') %>
  </div>
  <div class="field">
    <%= f.label :project_id %></br >
    <%= collection_select(:task, :project_id, Project.all.order(:title), :id, :title, include_blank: '') %>
  </div>
  <div class="field">
    <%= f.label :story_id %></br >
    <%= collection_select(:task, :story_id, Story.all.order(:title), :id, :title) %>
  </div>
  <div class="field">
    <%= f.label :estimated_hours %></br >
    <%= f.text_field :estimated_hours %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, {rows: 10, cols: 60} %>
  </div>
  <div class="field">
    <%= f.label :sched_start_date %><br>
    <%= f.date_field :sched_start_date %>
  </div>
  <div class="field">
    <%= f.label :actual_start_date %><br>
    <%= f.date_field :actual_start_date %>
  </div>
  <div class="field">
    <%= f.label :sched_completion_date %><br>
    <%= f.date_field :sched_completion_date %>
  </div>
  <div class="field">
    <%= f.label :actual_completion_date %><br>
    <%= f.date_field :actual_completion_date %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
