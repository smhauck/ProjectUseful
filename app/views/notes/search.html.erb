<form action="/notes/search" method="get">
Criteria:  <input type='text' name='criteria' autofocus />
<input type='submit' name='submit' value="Search" />
</form>

<% if @notes.length >= 1 %>
<table class="table">
  <thead>
    <tr>
      <th>Created</th>
      <th>Creator</th>
      <th>Title</th>
      <th>Project</th>
      <th>Task</th>
      <th><del style="color:lightgrey">Meeting</del></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.created_at %></td>
	<td><%= note.creator.first_name %> <%= note.creator.last_name %></td>
        <td><%= link_to note.title, note %></td>
        <td><% if note.project %><%= note.project.title %><% end %></td>
	<td><% if note.task %><%= note.task.title %><% end %></td>
	<td></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
