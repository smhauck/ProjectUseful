<%= form_for(@note) do |f| %>
  <% if @note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
      <% @note.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, { size: 60 } %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body, { cols: 60, rows: 10 } %>
  </div>
 
  <div class="field">
	  <%= f.label :product_id %></br >
	  <%= collection_select(:note, :product_id, Product.all, :id, :title, include_blank: true) %>
  </div>
  <div class="field">
	  <%= f.label :sprint_id %></br >
	  <%= collection_select(:note, :sprint_id, Sprint.all, :id, :start_date, include_blank: true) %>
  </div>
  <div class="field">
	  <%= f.label :story_id %></br >
	  <%= collection_select(:note, :story_id, Story.all, :id, :title, include_blank: true) %>
  </div>
  <div class="field">
	  <%= f.label :task_id %></br >
	  <%= collection_select(:note, :task_id, Task.all, :id, :title, include_blank: true) %>
  </div>
  
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
