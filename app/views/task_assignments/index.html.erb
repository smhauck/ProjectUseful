<table>
  <thead>
    <tr>
      <th>Task</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @task_assignments.each do |task_assignment| %>
      <tr>
        <td><%= task_assignment.task %></td>
        <td><%= task_assignment.user %></td>
